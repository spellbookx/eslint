# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[*.md]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
